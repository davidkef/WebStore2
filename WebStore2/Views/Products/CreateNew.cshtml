@model WebStore.Models.Product

<h1>Creating new product</h1>
<form >
    <div class="form-group row">
        <label for="productName" >Name</label>
        <input class="form-control" type="text" value="">
    </div>
    <div class="form-group row">
        <label for="productDescription">Description</label>
        <textarea class="form-control" value="" id="description" rows="4"></textarea>
    </div>
    <div class="form-group row">
        <label for="productCategory">Category</label>
        <select class="form-control" id="category">
            <option>Choose...</option>
            <option>Books & Audible</option>
            <option>Movies, Music & Games</option>
            <option>Electronics & Computers</option>
            <option>Home, Garden & Tools”</option>
            <option>Beauty, Health & Grocery</option>
            <option>Toys, Kids & Baby</option>
            <option>Clothing, Shoes & Jewelry</option>
            <option>Sport & Outdoors</option>
            <option>Automotive & Industrial</option>
        </select>
    </div>
    <div class="form-group row">
        <label for="productPrice">Price</label>
        <input class="form-control" type="number" value="">
    </div>
    <div class="form-group row">
        <label for="productStock">Stock</label>
        <input class="form-control" type="number" value="">
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-danger">Cancel</button>
    </div>
</form>
